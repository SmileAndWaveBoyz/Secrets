<%- include('partials/header') %>

<body>
  <div class="container">
    <div class="relativeBox">
      <svg class="logoSVGRegister" width="33" height="27" xmlns="http://www.w3.org/2000/svg"><path d="m26.463.408 3.2 6.4h-4.8l-3.2-6.4h-3.2l3.2 6.4h-4.8l-3.2-6.4h-3.2l3.2 6.4h-4.8l-3.2-6.4h-1.6a3.186 3.186 0 0 0-3.184 3.2l-.016 19.2a3.2 3.2 0 0 0 3.2 3.2h25.6a3.2 3.2 0 0 0 3.2-3.2V.408h-6.4Z" fill="#FC4747"/></svg>
            <div class="card-body">
              <h1>Sign up</h1>
              <form action="/register" method="POST" id="form" novalidate>
                <div class="form-group">
                  <div class="field">
                    <input type="email" placeholder="Email address" name="username" id="EMAIL" required>
                    <label id="errorEmailElement" for="EMAIL"></label>
                  </div>
                  <div class="field">
                    <input type="password" placeholder="Password" name="password" id="PASSWORD" required>
                    <label id="errorPasswordElement" for="PASSWORD"></label>
                  </div>
                  <div class="field">
                    <input type="password" placeholder="Repeat password" name="confirm_password" id="confirm_password" required>
                    <label id="errorPasswordRepeatElement" for="confirm_password"></label>
                  </div>
                </div>
                <button type="submit" class="loginButton" id="form">Create an account</button>
              </form>
              <a class="signUpGoogleButton" href="/auth/google" role="button"><i class="fab fa-google"></i> Sign Up with Google</a>
            
              <div class="accountTextContainer">
                <p class="accountText">Already have have an account?</p>
                <a class="signUpButton" href="/login">Login</a>
              </div>
            </div>
    </div>
  </div>

  <script src="js/register.js"></script>
</body>
</html>
